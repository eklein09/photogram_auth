<div class="col-md-8 col-md-offset-2">
  <div class="jumbotron">
    <h3>
      alice
    </h3>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-striped table-hover">
      <tr>

        <th>Caption</th>

        <th>Image</th>

        <th>Actions</th>
      </tr>

      <% @user.photos.each do |photo| %>
      <tr>

        <td><%= photo.caption %></td>

        <td>
          <a href="/photos/<%= photo.id %>"><img src="<%= photo.image %>" class="img-responsive" alt="<%= photo.caption %>">
          </a>
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>

